<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model='ir.ui.view' id="spaceship_view_form">
            <field name="name">academy.spaceship.form</field>
            <field name="model">academy.spaceship</field>
            <field name="arch" type="xml">
                <form string="Spaceship Form">
                    <sheet>
                        <h1>Spaceship Name<field name="name"/></h1>
                        <group>
                            <group>
                                <field name="numberOfPassengers"/>
                                <p>Type: <field name="type"/></p>
                            </group>
                            
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="course_view_list">
            <field name="name">academy.spaceship.list</field>
            <field name="model">academy.spaceship</field>
            <field name="arch" type="xml">
                <tree string="Course List">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>
        
        
    </data>
</odoo>